<theme>

        <include>./colors.xml</include>

        
	<aspectRatio name="4:3">
		<include>./4-3.xml</include>
	</aspectRatio>

	<aspectRatio name="16:10">
		<include>./16-10.xml</include>
	</aspectRatio>

	<aspectRatio name="21:9">
		<include>./21-9.xml</include>
	</aspectRatio>


        <variables>
            <mainFont>./assets/fonts/elli.otf</mainFont>
            <mainFontSize>0.025</mainFontSize>

            <helpFont>./assets/fonts/elli.otf</helpFont>
            <helpFontSize>0.02</helpFontSize>
        </variables>

    <view name="system">
        <carousel name="system_carousel">
                        <pos>0.5 0.65</pos>
                        <size>1 1</size>
                        <origin>0.5 0.5</origin>
                        <type>horizontal</type>
                        <maxItemCount>4</maxItemCount>
                        <itemSize>0.2 0.3</itemSize>
                        <itemScale>1.3</itemScale>
                        <imageColor>${secondColor}</imageColor>
                        <imageSelectedColor>${secondColor}</imageSelectedColor>
                        <selectedItemMargins>0.15 0.15</selectedItemMargins>
                        <itemVerticalAlignment>middle</itemVerticalAlignment>
                        <verticalOffset>0</verticalOffset>
                        <imageInterpolation>linear</imageInterpolation>
                        <unfocusedItemOpacity>1</unfocusedItemOpacity>
                        <unfocusedItemSaturation>0.5</unfocusedItemSaturation>
                        <reflections>true</reflections>
                        <reflectionsOpacity>0.4</reflectionsOpacity>
                        <color>00000000</color>
                        <text>${system.fullName}</text>
                        <textColor>${mainFontColor}</textColor>
                        <fontPath>${mainFont}</fontPath>
                        <fontSize>${mainFontSize}</fontSize>
                        <letterCase>uppercase</letterCase>
                        <lineSpacing>1.2</lineSpacing>
                        <zIndex>29</zIndex>
        </carousel>
       
            <image name="shader2">
                <path>./assets/images/background.png</path>
                <size>1 0.3</size>
                <pos>0 .15</pos>
                <color>${firstColor}00</color>
                <colorEnd>${firstColor}</colorEnd>
                <gradientType>vertical</gradientType>
                <zIndex>15</zIndex>
            </image>
            <image name="mid">
                <path>./assets/images/background.png</path>
                <size>1 0.1</size>
                <pos>0 .45</pos>
                <color>${firstColor}</color>
                <zIndex>15</zIndex>
            </image>
            <image name="shader3">
                <path>./assets/images/background.png</path>
                <size>1 0.3</size>
                <pos>0 .55</pos>
                <color>${firstColor}</color>
                <colorEnd>${firstColor}00</colorEnd>
                <gradientType>vertical</gradientType>
                <zIndex>15</zIndex>
            </image>
            <text name="count">
                <size>0.3 0.05</size>
                <systemdata>gamecount</systemdata>
                <fontPath>${mainFont}</fontPath>
                <fontSize>0.03</fontSize>
                <lineSpacing>1</lineSpacing>
                <horizontalAlignment>center</horizontalAlignment>
                <color>${firstColor}</color>
                <pos>0.5 0.9</pos>
                <origin>0.5 0</origin>
            </text>
    </view>
  

    <view name="system, gamelist">
        <helpsystem name="help">
            <pos>.5 0.96</pos>
            <origin>0.5 0.5</origin>
            <fontPath>${helpFont}</fontPath>
            <textColor>${helpColor}</textColor>
            <iconColor>${helpColor}</iconColor>
            <fontSize>${helpFontSize}</fontSize>
        </helpsystem>
        <image name="background">
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./assets/images/background.png</path>
            <color>${backgroundColor}</color>
            <zIndex>0</zIndex>
        </image>
        
        
        
    </view>

    

    <view name="gamelist">
        <carousel name="system_carousel">
            <pos>0.5 0.75</pos>
            <size>1 1</size>
            <origin>0.5 0.5</origin>
            <type>horizontal</type>
            <imageType>cover</imageType>
            <maxItemCount>6</maxItemCount>
            <itemSize>0.2 0.3</itemSize>
            <itemScale>1.3</itemScale>
            <selectedItemMargins>0.15 0.15</selectedItemMargins>
            <itemVerticalAlignment>middle</itemVerticalAlignment>
            <verticalOffset>0</verticalOffset>
            <imageInterpolation>linear</imageInterpolation>
            <unfocusedItemOpacity>1</unfocusedItemOpacity>
            <unfocusedItemSaturation>0.5</unfocusedItemSaturation>
            <unfocusedItemDimming>0.5</unfocusedItemDimming>
            <reflections>true</reflections>
            <color>00000000</color>
            <text>${system.fullName}</text>
            <textColor>${mainFontColor}</textColor>
            <fontPath>${mainFont}</fontPath>
            <fontSize>${mainFontSize}</fontSize>
            <letterCase>uppercase</letterCase>
            <lineSpacing>1.2</lineSpacing>
            <zIndex>29</zIndex>
</carousel>
<image name="shader2">
    <path>./assets/images/background.png</path>
    <size>1 0.5</size>
    <pos>0 0</pos>
    <color>${firstColor}</color>
    <zIndex>14</zIndex>
</image>
<image name="shader3">
    <path>./assets/images/background.png</path>
    <size>1 0.25</size>
    <pos>0 .5</pos>
    <color>${firstColor}</color>
    <colorEnd>${firstColor}00</colorEnd>
    <gradientType>vertical</gradientType>
    <zIndex>14</zIndex>
</image>

<image name="background3">
    <pos>00.25 00.2</pos>
    <size>0.2 0.025</size>
    <rotation>-90</rotation>
    <path>./assets/images/oval.svg</path>
    <color>${backgroundColor}</color>
    <zIndex>20</zIndex>
</image>
<image name="background4">
    <pos>00.55 00.2</pos>
    <size>0.2 0.025</size>
    <rotation>90</rotation>
    <path>./assets/images/oval.svg</path>
    <color>${backgroundColor}</color>
    <zIndex>20</zIndex>
</image>

<image name="Syslogo">
    <path>./assets/syslogo/${system.theme}.svg</path>
    <pos>0.035 0.225</pos>
    <origin>0.5 0.5</origin>
    <rotation>-90</rotation>
    <maxSize>0.17 0.07</maxSize>
    <color>${secondColor}</color>
    <zIndex>50</zIndex>
</image>

<text name="fave1">
    <metadata>favorite</metadata>
    <fontPath>${mainFont}</fontPath>
    <fontSize>0.025</fontSize>
    <color>${secondColor}</color>
    
    <letterCase>capitalize</letterCase>
    <horizontalAlignment>left</horizontalAlignment>
    <pos>0.61 0.3</pos>
    <origin>0 0</origin>
</text>
<text name="fave2">
    <text>Favorite:</text>
    <metadataElement>true</metadataElement>
    <fontPath>${mainFont}</fontPath>
    <fontSize>0.025</fontSize>
    <color>${secondColor}</color>
    <pos>0.6 0.3</pos>
    <origin>1 0</origin>
</text>
<text name="kid1">
    <metadata>kidgame</metadata>
    <fontPath>${mainFont}</fontPath>
    <fontSize>0.025</fontSize>
    <color>${secondColor}</color>
    
    <letterCase>capitalize</letterCase>
    <horizontalAlignment>left</horizontalAlignment>
    <pos>0.61 0.33</pos>
    <origin>0 0</origin>
</text>
<text name="kid2">
    <text>Child Friendly:</text>
    <metadataElement>true</metadataElement>
    <origin>1 0</origin>
    <fontPath>${mainFont}</fontPath>
    <fontSize>0.025</fontSize>
    <color>${secondColor}</color>
    <pos>0.6 0.33</pos>
</text>

<text name="complete1">
    <metadata>completed</metadata>
    <fontPath>${mainFont}</fontPath>
    <fontSize>0.025</fontSize>
    <color>${secondColor}</color>
    
    <letterCase>capitalize</letterCase>
    <horizontalAlignment>left</horizontalAlignment>
    <pos>0.61 0.27</pos>
    <origin>0 0</origin>
</text>
<text name="complete2">
    <text>Completed:</text>
    <metadataElement>true</metadataElement>
    <fontPath>${mainFont}</fontPath>
    <fontSize>0.025</fontSize>
    <color>${secondColor}</color>
    <pos>0.6 0.27</pos>
    <origin>6 0</origin>
</text>

<text name="player1">
    <metadata>players</metadata>
    <fontPath>${mainFont}</fontPath>
    <fontSize>0.05</fontSize>
    <color>${secondColor}</color>
    <horizontalAlignment>left</horizontalAlignment>
    <pos>0.44 0.305</pos>
    <origin>0 0</origin>
</text>
<text name="player2">
    <text>x</text>
    <defaultValue>:space:</defaultValue>
    <metadataElement>true</metadataElement>
    <fontPath>${mainFont}</fontPath>
    <fontSize>0.03</fontSize>
    <color>${secondColor}</color>
    <pos>0.43 0.32</pos>
    <origin>0 0</origin>
</text>
<text name="description1">
    <size>0.26 0.35</size>
    <metadata>description</metadata>
    <fontPath>${mainFont}</fontPath>
    <fontSize>0.025</fontSize>
    <lineSpacing>1</lineSpacing>
    <verticalAlignment>bottom</verticalAlignment>
    <color>${secondColor}</color>
    <pos>0.07 0.05</pos>
    <origin>0 0</origin>
</text>
<image name="released">
    <path>./assets/images/date.svg</path>
    <pos>0.395 0.245</pos>
    <origin>0.5 0.5</origin>
    <maxSize>0.04 0.04</maxSize>
    <color>${secondColor}</color>
    <zIndex>50</zIndex>
</image>
<datetime name="released">
    <metadata>releasedate</metadata>
    <fontPath>${mainFont}</fontPath>
    <defaultValue>:space:</defaultValue>
    <format>%Y</format>
    <fontSize>0.04</fontSize>
    <color>${secondColor}</color>
    <horizontalAlignment>left</horizontalAlignment>
    <pos>0.415 0.22</pos>
    <origin>0 0</origin>
</datetime>
<rating name="rating">
    <pos>0.52 0.23</pos>
    <size>0.08 0.04</size>
    <interpolation>nearest</interpolation>
    <color>${secondColor}</color>
    <filledPath>./assets/images/rating_filled.svg</filledPath>
    <unfilledPath>./assets/images/rating_empty.svg</unfilledPath>
</rating>

<image name="handheld">
    <path>./assets/handhelds/${system.theme}.png</path>
    <default>./assets/handhelds/default.png</default>
    <pos>0.395 0.345</pos>
    <origin>0.5 0.5</origin>
    <maxSize>0.05 0.1</maxSize>
    <zIndex>15</zIndex>
</image>
<image name="marquee">
    <pos>0.5 0.125</pos>
    <origin>0.5 0.5</origin>
    <maxSize>0.2 0.2</maxSize>
    <imageType>marquee</imageType>
    <zIndex>50</zIndex>
</image>
<badges name="controller">
    <pos>0.36 0.26</pos>
    <size>0.075 .2</size>
    <direction>column</direction>
    <lines>1</lines>
    <itemsPerLine>1</itemsPerLine>
    <slots>controller</slots>
    <controllerPos>0.51 0.415</controllerPos>
    <controllerSize>1</controllerSize>
    <badgeIconColor>${firstColor}</badgeIconColor>
    <customBadgeIcon badge="controller">./assets/badges/control.png</customBadgeIcon>
    <zIndex>16</zIndex>
</badges>
</view>
<variant name="solidWithVideos">
    <view name="system">
        <carousel name="system_carousel">
                        <staticImage>./assets/syslogo/${system.theme}.svg</staticImage>
        </carousel>
    </view>
    <view name="gamelist">
        <video name="gamedisplay">
            <imageType>titlescreen,screenshot, fanart</imageType>
            <maxSize>0.3 0.335</maxSize>
            <origin>0.5 0.5</origin>
            <pos>0.825 0.2125</pos>
            <pillarboxes>false</pillarboxes>
            <zIndex>20</zIndex>
        </video>   
    </view>
</variant>

